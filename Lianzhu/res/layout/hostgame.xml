<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/background"
   android:layout_height="fill_parent"
   android:layout_width="fill_parent"
   android:padding="30dip"
   android:orientation="horizontal">
   <LinearLayout
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_gravity="center">
      <TextView
         android:text="@string/host_game"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:layout_marginBottom="25dip"
         android:textSize="24.5sp" />
      <TextView
         android:paddingTop="5dip"
	     android:text="@string/room_number"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"/>
	  <TextView
	     android:paddingLeft="30dip"
	     android:paddingTop="5dip"
	     android:text="123"
		 android:id="@+id/room_number"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:textSize="18sp"/>
	  <TextView
	     android:paddingTop="5dip"
		 android:text="@string/board_size_label"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"/>
	  <TextView
	     android:paddingLeft="30dip"
	     android:paddingTop="5dip"
	     android:id="@+id/board_size"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:textSize="18sp"/>
	  <TextView
	     android:paddingTop="5dip"
		 android:text="@string/player_name"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"/>
	  <TextView
	     android:paddingLeft="30dip"
	     android:paddingTop="5dip"
	     android:text="@string/no_player"
		 android:id="@+id/player_name"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:textSize="18sp"/>
	  <TableLayout
	     android:paddingTop="25dip"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:stretchColumns="*">
         <TableRow>
	       <Button
	         android:id="@+id/quit_button"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:alphabeticShortcut="@string/exit_shortcut"
	         android:text="@string/quit_label" />
	       <Button
	         android:id="@+id/start_button"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:alphabeticShortcut="@string/start_shortcut"
	         android:text="@string/start_label" />
	     </TableRow>
	  </TableLayout>
   </LinearLayout>
</LinearLayout>
